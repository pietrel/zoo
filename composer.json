    "description": "Simple zoo library",
    "autoload": {
        "psr-4": {
            "Pietrel\\Zoo\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Piotr Kurek",
            "email": "piotr.kurek@gmail.com"
        }
    ],
    "require": {
